<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.MainSearchFragment"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/main_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_primary"
        android:layoutDirection="rtl"
        app:defaultQueryHint="@string/search_button_hint"
        app:showAsAction="always|collapseActionView"
        app:actionViewClass="android.support.v7.widget.SearchView"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mainSearchTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/light_primary"
        app:tabSelectedTextColor="@color/light_primary"
        app:tabGravity="fill"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mainSearchViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>